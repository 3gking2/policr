<% is_home_path = home_page?(env) %>
<html<%= is_home_path ? " class=\"has-navbar-fixed-top\"" : "" %>>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Chrome, Firefox OS and Opera -->
    <meta name="theme-color" content="#29D1ED" />
    <!-- Windows Phone -->
    <meta name="msapplication-navbutton-color" content="#29D1ED" />
    <!-- iOS Safari -->
    <meta name="apple-mobile-web-app-status-bar-style" content="#29D1ED" />
    <title>PolicrBot · <%= title %></title>
    <link
      rel="stylesheet"
      href='<%= Digests.logical_path("/css/user.css") %>'
    />
  </head>
  <body>
    <header>
      <nav
        class="navbar pr-nav <%= is_home_path ? "is-fixed-top" : "is-info" %>"
        role="navigation"
        aria-label="main navigation"
      >
        <div class="container">
          <div class="navbar-brand">
            <a class="navbar-item" href="/">
              首页
            </a>
            <a href="/getting-started" class="navbar-item">
              入门
            </a>
            <a
              class="navbar-item"
              target="_blank"
              href="https://policr.bluerain.io/community"
            >
              社区
            </a>
            <a
              role="button"
              class="navbar-burger burger"
              aria-label="menu"
              aria-expanded="false"
              data-target="navbarBasicExample"
            >
              <span aria-hidden="true"></span>
              <span aria-hidden="true"></span>
              <span aria-hidden="true"></span>
            </a>
          </div>

          <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-end">
              <div class="navbar-item has-dropdown is-hoverable">
                <a class="navbar-link">
                  文档指南
                </a>
                <div class="navbar-dropdown is-boxed">
                  <a class="navbar-item" href="/advanced">
                    高级教程
                  </a>
                  <a class="navbar-item" href="/qa">
                    常见问题
                  </a>
                  <a class="navbar-item">
                    私有部署
                  </a>
                  <hr class="navbar-divider" />
                  <a class="navbar-item">
                    版本变化
                  </a>
                </div>
              </div>
              <div class="navbar-item">
                <div class="field is-grouped">
                  <p class="control">
                    <a
                      class="button has-text-white has-background-primary"
                      target="_blank"
                      style="border:none;"
                      href="https://t.me/policr_bot"
                    >
                      <span class="icon">
                        <i class="fas fa-robot"></i>
                      </span>
                      <span>
                        领取机器人
                      </span>
                    </a>
                  </p>
                  <p class="control">
                    <a
                      class="button has-text-white has-background-black"
                      style="border:none;"
                      href="https://github.com/Hentioe/policr"
                      target="_blank"
                    >
                      <span class="icon">
                        <i class="fab fa-github-alt"></i>
                      </span>
                      <span>GitHub</span>
                    </a>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <%= content %>
    </main>
    <footer class="footer has-text-white">
      <div class="content has-text-centered">
        <p>
          <a href="https://github.com/Hentioe/policr">Policr</a>
          项目由
          <a href="https://github.com/Hentioe">Hentioe</a>
          创建，采用
          <a href="http://opensource.org/licenses/mit-license.php">MIT</a>
          许可证开放源代码
        </p>
      </div>
    </footer>
    <script
      type="text/javascript"
      src='<%= Digests.logical_path("/js/user.js") %>'
    ></script>
    <style>
      /* latin-ext */
      @font-face {
        font-family: "Aleo";
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: local("Aleo Regular"), local("Aleo-Regular"),
          url(<%=Digests.logical_path("/fonts/Aleo-latin-ext.woff2")%>)
            format("woff2");
        unicode-range: U+0100-024F, U+0259, U+1E00-1EFF, U+2020, U+20A0-20AB,
          U+20AD-20CF, U+2113, U+2C60-2C7F, U+A720-A7FF;
      }
      /* latin */
      @font-face {
        font-family: "Aleo";
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: local("Aleo Regular"), local("Aleo-Regular"),
          url(<%=Digests.logical_path("/fonts/Aleo-latin.woff2")%>)
            format("woff2");
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6,
          U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193,
          U+2212, U+2215, U+FEFF, U+FFFD;
      }
    </style>
  </body>
</html>
